<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Projeto_Isoca_linda</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Estilos customizados -->
    <style>
        :root {
            --cor-principal: #7b2cbf;
            --cor-secundaria: #9d4edd;
            --cor-fundo: #f9f6ff;
            --cor-texto: #333;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--cor-fundo);
            color: var(--cor-texto);
            margin: 0;
            padding: 0;
        }

        /* ===== NAVBAR ===== */
        .navbar {
            background: linear-gradient(90deg, var(--cor-principal), var(--cor-secundaria));
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        }

        .navbar-brand {
            color: #fff !important;
            font-weight: 700;
            letter-spacing: 1px;
        }

        .navbar-nav .nav-link {
            color: #f8f9fa !important;
            margin: 0 8px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .navbar-nav .nav-link:hover {
            color: #ffd6ff !important;
            transform: scale(1.05);
        }

        /* ===== CONTEÚDO ===== */
        main {
            padding: 2rem 1rem;
            animation: fadeIn 0.6s ease-in;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(15px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* ===== FOOTER ===== */
        footer {
            background: var(--cor-principal);
            color: #fff;
            text-align: center;
            padding: 1rem 0;
            margin-top: 3rem;
            font-size: 0.9rem;
        }

        footer a {
            color: #ffd6ff;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }

        /* ===== BOTÃO MOBILE ===== */
        .navbar-toggler {
            border: none;
            background-color: #fff2;
        }

        .navbar-toggler-icon {
            filter: invert(1);
        }
    </style