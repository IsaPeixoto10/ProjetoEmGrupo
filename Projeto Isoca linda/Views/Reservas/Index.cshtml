@model IEnumerable<Projeto_Isoca_linda.Models.Reserva>

@{
    ViewData["Title"] = "Reservas";
    Layout = "~/Views/Shared/_Layout.cshtml"; // pode ajustar se quiser sem layout
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Lista de Reservas</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nova Reserva
        </a>
    </div>

    <div class="table-responsive shadow rounded-3">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-primary text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Cliente)</th>
                    <th>@Html.DisplayNameFor(model => model.Pacote)</th>
                    <th>@Html.DisplayNameFor(model => model.DataReserva)</th>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@Html.DisplayFor(modelItem => item.Cliente.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Pacote.Destino)</td>
                        <td>@item.DataReserva.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (item.Status == "Confirmada")
                            {
                                <span class="badge bg-success">Confirmada</span>
                            }
                            else if (item.Status == "Pendente")
                            {
                                <span class="badge bg-warning text-dark">Pendente</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@item.Status</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ReservaId" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.ReservaId" class="btn btn-sm btn-outline-info me-1">
                                <i class="bi bi-eye"></i> Detalhes
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ReservaId" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>